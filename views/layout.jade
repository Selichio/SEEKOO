  body.hold-transition.skin-blue.sidebar-mini(onload="clock_update('meineuhr');")
    .wrapper
      // Main Header
      header.main-header
        // Logo
        a.logo(href='/admin')
          // mini logo for sidebar mini 50x50 pixels
          span.logo-mini
            b SK
            | SE
          // logo for regular state and mobile devices
          span.logo-lg
            b SEKO
            | Schadenserfassung
        // Header Navbar
        nav.navbar.navbar-static-top(role='navigation')
          // Sidebar toggle button
          a.sidebar-toggle(href='#', data-toggle='offcanvas', role='button')
            span.sr-only Toggle navigation
          // Navbar Right Menu
          .navbar-custom-menu
            ul.nav.navbar-nav
              // Notifications Menu
                li.dropdown.notifications-menu
                  // Menu toggle button
                  a.dropdown-toggle(href='#', data-toggle='dropdown')
                    i.fa.fa-bell-o
                    span.label.label-warning 10
                  ul.dropdown-menu
                    li.header You have 10 notifications
                    li
                      // Inner Menu: contains the notifications
                      ul.menu
                        li
                          // start notification
                          a(href='#')
                            i.fa.fa-users.text-aqua
                            |  5 new members joined today
                        // end notification
                    li.footer
                      a(href='#') View all
                    // . Ende Notification Icon
              // Tasks Menu
                li.dropdown.tasks-menu
                  // Menu Toggle Button
                  a.dropdown-toggle(href='#', data-toggle='dropdown')
                    i.fa.fa-flag-o
                    span.label.label-danger 9
                  ul.dropdown-menu
                    li.header You have 9 tasks
                    li
                      // Inner menu: contains the tasks
                      ul.menu
                        li
                          // Task item
                          a(href='#')
                            // Task title and progress text
                            h3
                              | Design some buttons
                              small.pull-right 20%
                            // The progress bar
                            .progress.xs
                              // Change the css width attribute to simulate progress
                              .progress-bar.progress-bar-aqua(style='width: 20%', role='progressbar', aria-valuenow='20', aria-valuemin='0', aria-valuemax='100')
                                span.sr-only 20% Complete
                        // end task item
                    li.footer
                      a(href='#') View all tasks
                    // . Ende Task Icon
              // User Account Menu
              li.dropdown.user.user-menu
                // Menu Toggle Button
                a.dropdown-toggle(href='#', data-toggle='dropdown')
                  // The user image in the navbar
                  img.user-image(src='/images/user2-160x160.jpg', alt='User Image')
                  // hidden-xs hides the username on small devices so only the image appears.
                  span.hidden-xs #{user.vorname} #{user.name}
                ul.dropdown-menu
                  // The user image in the menu
                  li.user-header
                    img.img-circle(src='/images/user2-160x160.jpg', alt='User Image')
                    p
                      | #{user.vorname} #{user.name} - 
                      if user.rolle == "mitarbeiter"
                          | Mitarbeiter
                      else
                          | Kunde
                      // small Member since Nov. 2012
                  // Menu Footer
                  li.user-footer
                    .pull-left
                      a.btn.btn-default.btn-flat(href='#') Profil
                    .pull-right
                      a.btn.btn-default.btn-flat(href='/logout') Ausloggen
              // Control Sidebar Toggle Button
              li
                a(href='#', data-toggle='control-sidebar')
                  i.fa.fa-gears
      // Left side column. contains the logo and sidebar
      aside.main-sidebar
        // sidebar: style can be found in sidebar.less
        section.sidebar
          // Sidebar user panel (optional)
          .user-panel
            .pull-left.image
              img.img-circle(src='/images/user2-160x160.jpg', alt='User Image')
            .pull-left.info
              p #{user.vorname} #{user.name}
              // Rolle
              a(href='#')
                if user.rolle == "mitarbeiter"
                  | Mitarbeiter
                else
                  | Kunde
          // Sidebar Menu
          ul.sidebar-menu
            li.header Navigation
            // Optionally, you can add icons to the links
            if user.rolle == "kunde"
              li
                a(href='/kunde/intern')
                  i.fa.fa-link
                  span Übersicht
              li.treeview
                a(href='#')
                  i.fa.fa-link
                  span Vorfälle
                  i.fa.fa-angle-left.pull-right
                ul.treeview-menu
                  li
                    a(href='/kunde/erfassen') Schaden erfassen
            else
              li
                a(href='/mitarbeiter/intern')
                  i.fa.fa-link
                  span Control Center

          // /.sidebar-menu
        // /.sidebar
      // Content Wrapper. Contains page content
      .content-wrapper
        // Content Header (Page header)
        section.content-header
          h1
            block header
            small 
              block headerdesc
          ol.breadcrumb
            li
              a(href='#')
                i.fa.fa-dashboard
                |  Level
            li.active Here
        // Main content
        section.content
          // Your Page Content Here
          block content
        // /.content
      // /.content-wrapper
      // Main Footer
      footer.main-footer
        // To the right
        .pull-right.hidden-xs
          p 
            span#meineuhr
        // Default to the left
        strong
          | Copyright © 2015 
          a(href='#') SEKO
          | .
        |  All rights reserved.
      // Control Sidebar
      aside.control-sidebar.control-sidebar-dark
        // Create the tabs
        // Tab panes
        .tab-content
          // Home tab content
          #control-sidebar-home-tab.tab-pane.active
            h3.control-sidebar-heading Letzte Vorfälle
            ul.control-sidebar-menu
              li
                a(href='javascript::;')
                  i.menu-icon.fa.fa-birthday-cake.bg-red
                  .menu-info
                    h4.control-sidebar-subheading Langdon's Birthday
                    p Will be 23 on April 24th
              // /.form-group
          // /.tab-pane
      // /.control-sidebar
      //
        Add the sidebar's background. This div must be placed
        immediately after the control sidebar
      .control-sidebar-bg
    // ./wrapper
    // REQUIRED JS SCRIPTS
    // jQuery 2.1.4
    script(src='/plugins/jQuery/jQuery-2.1.4.min.js')
    // Bootstrap 3.3.5
    script(src='/js/bootstrap.min.js')
    // AdminLTE App
    script(src='/js/app.min.js')
    // DataTables
    script(src='/js/jquery.dataTables.min.js')
    script(src='/js/dataTables.bootstrap.min.js')
